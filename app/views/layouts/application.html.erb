<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || t('front.website') %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= yield :head %>
    <%= stylesheet_link_tag "application" %>
  </head>
  <body>
    <%= render "top" %>
    <%= render "header" %>
    <%= render "notice" %>
    <main>
      <div class="container">
        <%= render "breadcrumb" %>
        <h1 class="my-5"><%= content_for :title %></h1>
        <%= yield %>
      </div>
    </main>
    <%= render "footer" %>
    <%= javascript_include_tag "application" %>
    <%= render "bugsnag" %>
    <%= render "plausible" %>
  </body>
</html>
