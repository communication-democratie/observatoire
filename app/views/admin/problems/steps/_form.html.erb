
<%= simple_form_for step, url: step.persisted? ? admin_problems_step_path(step) : admin_problems_steps_path do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.input :title %>
  <%= f.input :description %>
  <div class="row">
    <div class="col-lg-4">
      <%= f.input :importance, include_blank: false %>
    </div>
    <div class="col-lg-4">
      <%= f.input :position %>
    </div>
    <div class="col-lg-4">
      <%= f.input :color, as: :color %>
    </div>
  </div>

  <%= f.button :submit, t('admin.save'), class: button_classes %>
<% end %>
