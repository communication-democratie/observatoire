<%= simple_form_for [:admin, @problem] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="row">
    <div class="col-lg-9">
      <%= f.input :title %>
    </div>
    <div class="col-lg-3">
      <%= f.input :year %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-4">
      <%= f.input :image %>
      <%= f.input :analyzed_by %>
      <%= f.association :organizations, as: :check_boxes %>
      <%= f.association :step, include_blank: false, as: :radio_buttons %>
      <% Taxonomy.all.ordered.each do |taxonomy| %>
        <%= f.association :categories,
                          label: taxonomy,
                          as: :check_boxes,
                          collection: taxonomy.categories.ordered %>
      <% end %>
    </div>
    <div class="col-lg-8">
      <%= f.input :description,
                  input_html: { rows: 30 },
                  hint: t('admin.markdown_hint') %>
    </div>
  </div>

  <%= f.button :submit, t('admin.save'), class: button_classes %>
<% end %>
