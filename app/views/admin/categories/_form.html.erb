
<%= simple_form_for [:admin, @category] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="row">
      <div class="col-lg-6">
        <%= f.input :title %>
      </div>
      <div class="col-lg-6">
        <%= f.input :slug, 
                    input_html: f.object.persisted? ? {} : {
                      class: 'js-slug-input',
                      data: { source: '#category_title' }
                    } %>
      </div>
    </div>
    <%= f.association :taxonomy, include_blank: false, as: :hidden %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('admin.save'), class: button_classes %>
  </div>
<% end %>
