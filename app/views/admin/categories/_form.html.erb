
<%= simple_form_for [:admin, @category] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :slug, 
                input_html: f.object.persisted? ? {} : {
                  class: 'js-slug-input',
                  data: { source: '#category_title' }
                } %>
    <%= f.association :taxonomy, include_blank: false, as: :hidden %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('admin.save'), class: button_classes %>
  </div>
<% end %>
