<%= content_for :title, t('admin.dashboard') %>

<div class="row">
  <div class="col-6 col-lg-3 col-md-6">
    <div class="card"> 
      <div class="card-body">
        <p class="text-muted">
          <%= link_to Report.model_name.human(count: 2), [:admin, :reports], class: 'stretched-link' %>
          <i class="bi bi-question-circle-fill"></i>
        </p>
        <h2 class="font-extrabold mb-0 text-end">
          <%= Report.count %>
        </h2>
      </div>
    </div>
  </div>
  <div class="col-6 col-lg-3 col-md-6">
    <div class="card"> 
      <div class="card-body">
        <p class="text-muted">
          <%= link_to Problem.model_name.human(count: 2), [:admin, :problems], class: 'stretched-link' %>
          <i class="bi bi-exclamation-circle-fill"></i>
        </p>
        <h2 class="font-extrabold mb-0 text-end">
          <%= Problem.count %>
        </h2>
      </div>
    </div>
  </div>
</div>