<% content_for :title, @problem %>

<div class="row">
  <div class="col-lg-6">
    <p><%= @problem.description %></p>
  </div>
</div>

<div class="row">
  <% Taxonomy.all.ordered.each do |taxonomy| %>
    <div class="col-lg-3">
      <div class="card">
        <div class="card-header">
          <%= taxonomy %>
        </div>
        <div class="card-body">
          <ul class="list-unstyled">
            <% @problem.categories.where(taxonomy: taxonomy).each do |category| %>
              <li><%= link_to category, category_path(taxonomy_slug: category.taxonomy.slug, category_slug: category.slug) %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>
</div>