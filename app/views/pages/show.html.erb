<%= content_for :title, @page %>

<% content_for :hero do %>
  <div class="container">
    <div class="row">
      <h1><%= @page %></h1>
    </div>
  </div>
<% end %>

<div class="row markdown">
  <div class="col-lg-4 text-end toc">
    <div class="sticky-lg-top">
      <h2 class="toc-title"><%= t ('front.pages.toc.title') %></h2>
        <nav id="toc-content">
          <%= @page.toc %>
        </nav>
    </div>
  </div>
  <div class="page-content col-lg-8" data-bs-spy="scroll" data-bs-target="#toc-content" >
    <%= @page.html %>
  </div>
</div>