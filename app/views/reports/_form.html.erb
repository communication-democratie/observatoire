
<%= simple_form_for(@report) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="row">
    <div class="col-lg-6">
      <h3 class="h4">Décrivez la publicité problématique...</h3>
      <%= f.input :title %>
      <%= f.input :description %>
    </div>
    <div class="col-lg-6">
      <h3 class="h4">Si vous le souhaitez, dites-nous qui vous êtes...</h3>
      <%= f.input :author_pseudonym %>
      <%= f.input :author_contact %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Envoyer', class: 'btn btn-primary' %>
  </div>
<% end %>
